@model List<TrainingCenterCRM.BLL.Models.Material>
@{
    ViewData["Title"] = "Materials";
}

<div class="content">
    <h1 class="content__header">Materials</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-xxl-3"></div>
            <div class="col-xxl-6">
                <div class="card">
                    <div class="card-header">Table</div>
                    <div class="card-body">
                        <div class="table-responsive scroll-div content-table">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Teacher</th>
                                        <th scope="col">Age</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var material in Model)
                                    {

                                        <tr>
                                            <th scope="col">@material.Name</th>
                                            <th scope="col">@material.MaterialType</th>
                                            <th scope="col" class="text-center">
                                                <a class="btn btn-danger m-1" asp-controller="Materials" asp-action="DeleteMaterial" asp-route-id="@material.Id"><i class="fas fa-trash"></i></a>
                                            </th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a class="btn btn-head" asp-controller="Materials" asp-action="EditMaterial">Add new material</a>
                        <a class="btn btn-head" asp-controller="Materials" asp-action="AddFile">Add file</a>
                    </div>
                </div>
            </div>
            <div class="col-xxl-3"></div>
        </div>
    </div>
</div>