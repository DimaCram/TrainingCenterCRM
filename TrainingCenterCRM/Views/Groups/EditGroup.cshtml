@model GroupModel
@{
    ViewData["Title"] = "Edit group";
}
<div class="content">
    <h1 class="content__header">Edit group</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                @using (Html.BeginForm("EditGroup", "Groups", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)

                    <div class="mb-3 row">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" asp-for="Name" required />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" type="date" asp-for="StartDate" required />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Edit group</button>
                }
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>