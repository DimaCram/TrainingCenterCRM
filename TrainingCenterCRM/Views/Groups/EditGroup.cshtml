@model GroupModel
@{
    ViewData["Title"] = "Edit group";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h2>Edit group</h2>
        @using (Html.BeginForm("EditGroup", "Groups", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input class="form-control" type="text" asp-for="Name" required />
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label><br />
                <input class="form-control" type="date" asp-for="StartDate" required />
            </div>
            <button type="submit" class="btn btn-success">Edit group</button>
        }
    </div>
    <div class="col-sm-3"></div>
</div>