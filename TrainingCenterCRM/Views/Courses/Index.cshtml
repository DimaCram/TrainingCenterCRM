@model List<TrainingCenterCRM.BLL.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="content">
    <h1 class="content__header">Courses</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {

                                <tr>
                                    <th scope="col">@course.Title</th>
                                    <th scope="col">@course.Description</th>
                                    <th scope="col">
                                        <a class="btn btn-success m-1" asp-controller="Courses" asp-action="EditCourse" asp-route-id="@course.Id">Edit</a>
                                        <a class="btn btn-danger m-1" asp-controller="Courses" asp-action="DeleteCourse" asp-route-id="@course.Id">Delete</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a class="btn btn-primary" asp-controller="Courses" asp-action="AddCourse">Add new course</a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>