@using TrainingCenterCRM.BLL.Models
@model CourseModel
@{
    var action = ViewData["Action"];
    ViewData["Title"] = $"{action} course";
}
<div class="content">
    <h1 class="content__header">@action course</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                @using (Html.BeginForm($"{action}Course", "Courses", FormMethod.Post))
                {
                    @Html.HiddenFor(x => x.Id)

                    <div class="mb-3 row">
                        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" asp-for="Title" />
                            <span asp-validation-for="Title" class="alert-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" asp-for="Description" />
                            <span asp-validation-for="Description" class="alert-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="TopicId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select class="form-control" asp-for="TopicId">
                                @foreach (var topic in (List<Topic>)ViewData["Topics"])
                                {
                                    if (Model != null && topic.Id == Model.TopicId)
                                    {
                                        <option value="@topic.Id" selected>@topic.Title</option>
                                    }
                                    else
                                    {
                                        <option value="@topic.Id">@topic.Title</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TopicId" class="alert-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">@action course</button>
                }
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}