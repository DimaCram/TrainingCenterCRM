@model List<TrainingCenterCRM.BLL.DTO.StudentDTO>
@{
    ViewData["Title"] = "Students";
}

<div class="content">
    <h1 class="content__header">Students</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Surname</th>
                                <th scope="col">Age</th>
                                <th scope="col">Group name</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {

                                <tr>
                                    <th scope="col">@student.Name</th>
                                    <th scope="col">@student.Surname</th>
                                    <th scope="col">@student.Age</th>
                                    <th scope="col">@student.Group.Name</th>
                                    <th scope="col">
                                        <a class="btn btn-success m-1" asp-controller="Students" asp-action="EditStudent" asp-route-id="@student.Id">Edit</a>
                                        <a class="btn btn-danger m-1" asp-controller="Students" asp-action="DeleteStudent" asp-route-id="@student.Id">Delete</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a class="btn btn-primary" asp-controller="Students" asp-action="AddStudent">Add new student</a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>