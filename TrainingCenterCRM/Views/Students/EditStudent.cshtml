@model StudentModel
@{
    ViewData["Title"] = "Edit student";
}
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h2>Edit student</h2>
        @using (Html.BeginForm("EditStudent", "Students", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                <label asp-for="Name"></label><br />
                <input class="form-control" type="text" asp-for="Name" required />
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label><br />
                <input class="form-control" type="text" asp-for="Surname" required />
            </div>
            <div class="form-group">
                <label asp-for="Age"></label><br />
                <input class="form-control" type="number" asp-for="Age" required />
            </div>
            <button type="submit" class="btn btn-success">Edit student</button>
        }
    </div>
    <div class="col-sm-3"></div>
</div>