@model TrainingCenterCRM.Models.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Training Center</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;1,300;1,400&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="~/assets/img/logo.ico" type="image/x-icon">
</head>
<body>
    <main class="main">
        <div class="pannel">
            <h1 class="pannel-header">Sign in to Training Center</h1>
            <a asp-controller="Accounts" asp-action="Register" class="pannel-link block-link">New to Training Center? Sign up!</a>
            <form asp-controller="Accounts" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row mb-3">
                    <label asp-for="Email" class="col-sm-2 col-form-label pannel-label">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control pannel-input" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="Password" class="col-sm-2 col-form-label pannel-label">Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control pannel-input" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="pannel-group mt-4 mb-4">
                    <button type="submit" class="pannel-btn">Sign in</button>
                    <a asp-controller="Accounts" asp-action="RecoveryPassword" class="pannel-link block-link">Forgot password?</a>
                </div>
            </form>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial">
</body>
</html>
