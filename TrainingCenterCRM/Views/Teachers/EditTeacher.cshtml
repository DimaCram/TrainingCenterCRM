@using TrainingCenterCRM.BLL.Models

@model TeacherModel

@{
    ViewData["Title"] = $"Teacher";
}
<div class="content">
    <div class="position-relative toast-box">
        <div class="toast-container position-absolute top-0 end-0">
        </div>
    </div>
    <h1 class="content__header">Work with teacher</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-xl-3"></div>
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">Teacher</div>
                    <div class="card-body">
                        <form enctype="multipart/form-data" method="post" asp-controller="Teachers" asp-action="EditTeacher" asp-route-id="@Model.Id"
                              asp-route-PathToIcon="@Model.PathToIcon">
                            <p class="text-danger">@ViewBag.Eror</p>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div id="drop-area">
                                        <input type="file" id="fileElem" accept=".png, .jpg , .jpeg" name="icon">
                                        <label class="btn btn-head" for="fileElem">
                                            Select image
                                            <i class="fas fa-cloud-upload-alt"></i>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <img id="img-icon" class="img-fluid" src="@Model.PathToIcon" />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" asp-for="Name" />
                                    <span asp-validation-for="Name" class="alert-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Surname" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text" asp-for="Surname" />
                                    <span asp-validation-for="Surname" class="alert-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Age" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="number" asp-for="Age" />
                                    <span asp-validation-for="Age" class="alert-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Bio" class="col-sm-3 col-form-label"></label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" asp-for="Bio" rows="5"></textarea>
                                    <span asp-validation-for="Bio" class="alert-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Ok</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-3"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/imageUpload.js"></script>
    <script src="~/js/toasts.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}