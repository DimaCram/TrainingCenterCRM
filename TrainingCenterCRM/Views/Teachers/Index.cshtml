@model List<TrainingCenterCRM.BLL.Models.Teacher>
@{
    ViewData["Title"] = "Students";
}

<div class="content">
    <h1 class="content__header">Teachers</h1>
    <div class="containt-fluid">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="table-responsive">
                    <table class="table table-striped table-hover text-center">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Surname</th>
                                <th scope="col">Age</th>
                                <th scope="col">Biography</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in Model)
                            {

                                <tr>
                                    <th scope="col">@teacher.Name</th>
                                    <th scope="col">@teacher.Surname</th>
                                    <th scope="col">@teacher.Age</th>
                                    <th scope="col">@teacher.Bio</th>
                                    <th scope="col">
                                        <a class="btn btn-success m-1" asp-controller="Teachers" asp-action="EditTeacher" asp-route-id="@teacher.Id">Edit</a>
                                        <a class="btn btn-danger m-1" asp-controller="Teachers" asp-action="DeleteTeacher" asp-route-id="@teacher.Id">Delete</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a class="btn btn-primary" asp-controller="Teachers" asp-action="AddTeacher">Add new teacher</a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>